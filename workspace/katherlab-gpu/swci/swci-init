# Assumption : SWOP is already running

# SWCI context setup
EXIT ON FAILURE
wait for 192.168.33.102
create context test-katherlab 192.168.33.102
switch context test-katherlab
EXIT ON FAILURE OFF

#Change to the directory where we are mounting the host
cd /platform/swarm/usr

# Create and finalize build task
EXIT ON FAILURE
create task from taskdefs/user_env_pyt_build_task.yaml
finalize task user_env_pyt_build_task
get task info user_env_pyt_build_task
get task body user_env_pyt_build_task
list tasks
EXIT ON FAILURE OFF

# Assign build task to taskrunner
EXIT ON FAILURE
RESET TASKRUNNER defaulttaskbb.taskdb.sml.hpe
ASSIGN TASK user_env_pyt_build_task TO defaulttaskbb.taskdb.sml.hpe WITH 2 PEERS
WAIT FOR TASKRUNNER defaulttaskbb.taskdb.sml.hpe
EXIT ON FAILURE OFF

# Build task was already run. Now build and run swarm run tasks

# Create and finalize swarm run task
EXIT ON FAILURE
create task from taskdefs/swarm_katherlab_task.yaml
finalize task swarm_katherlab_task
get task info swarm_katherlab_task
get task body swarm_katherlab_task
list tasks
EXIT ON FAILURE OFF

# Assign run task
EXIT ON FAILURE
RESET TASKRUNNER defaulttaskbb.taskdb.sml.hpe
ASSIGN TASK swarm_katherlab_task TO defaulttaskbb.taskdb.sml.hpe WITH 2 PEERS

WAIT FOR TASKRUNNER defaulttaskbb.taskdb.sml.hpe

# Grace period for ML container to save the model,
# before the below reset command cleans up the ML and SL Containers.
SLEEP 15
RESET TASKRUNNER defaulttaskbb.taskdb.sml.hpe
EXIT ON FAILURE OFF

# List and reset training contract
EXIT ON FAILURE
LIST CONTRACTS
RESET CONTRACT defaultbb.cqdb.sml.hpe
EXIT ON FAILURE OFF

# Exit
EXIT
